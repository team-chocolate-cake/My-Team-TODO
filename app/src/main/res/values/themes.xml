<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appbar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Splash Screen-->
        <item name="android:windowSplashscreenContent" tools:targetApi="s">@drawable/splash_logo</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="TextStyle.LabelMedium">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

    <style name="TextStyle.BodyMedium.EditTextStyle">
        <item name="android:textColor">@color/on_background_60</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/text_field_shape</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="TextStyle.LabelMedium.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/spacing_medium</item>
        <item name="chipEndPadding">@dimen/spacing_medium</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
    </style>

    <style name="TextStyle.LabelMedium.ChipStyle.Todo">
        <item name="chipBackgroundColor">@color/chip_background_todo</item>
    </style>

    <style name="TextStyle.LabelMedium.ChipStyle.InProgress">
        <item name="chipBackgroundColor">@color/chip_background_progress</item>
    </style>

    <style name="TextStyle.LabelMedium.ChipStyle.Done">
        <item name="chipBackgroundColor">@color/chip_background_done</item>
    </style>


    <style name="TopCornerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">"@dimen/spacing_extra_large"</item>
        <item name="cornerSizeTopLeft">"@dimen/spacing_extra_large"</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style  name="TextStyle.BodySmall.TextStyleStatus" >
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:textColor">@color/primary_container</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_small</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_medium</item>
        <item name="drawableLeftCompat">@drawable/ic_pen</item>
    </style>

    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableTint">@color/on_background_38</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textColorHint">@color/on_background_38</item>
        <item name="android:textColor">@color/on_background_87</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@drawable/custom_tab_indicator</item>
        <item name="tabIndicatorAnimationDuration">300</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/indicator_color</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/on_background_87</item>
    </style>
</resources>